package nonverblaster {	import flash.display.*;	import flash.events.*;		import com.gskinner.motion.GTween;	import fl.motion.easing.*;		public class BufferWheel extends MovieClip{		private var i					:uint;		private var distance			:uint = 10;		private var amount				:Number = 360 / distance;		private var bars				:Array = new Array();		private var fadeSpeed			:Number = .03;		private var counter				:Number = 0;		private var isOn				:Boolean = true;		private var fadeTween			:GTween;		public function BufferWheel(){			visible = false;			alpha = 0;			grf.mouseEnabled = false;			mouseEnabled = false;		}		public function setTint(){			Colorizer.colorize(grf, Glo.bal.controlColour);		}		private function fit(){			x = Math.floor(Glo.bal.stageWidth / 2);			y = Math.floor(Glo.bal.stageHeight / 2);		}		private function loop(e:Event){			fit();			grf.rotation += 10;		}		public function fadeIn(){			startLoop();			//fadeTween = new GTween(this, .7, {alpha:1});			visible = true;			alpha = 1;		}		public function fadeOut(){			visible = false;			try {				fadeTween.end();				fadeTween = new GTween(this, .3, {alpha:0}, {completeListener:fadeOutComplete});			} catch(e:Error){};		}		private function fadeOutComplete(e:Event){			stopLoop();		}		private function startLoop(){			addEventListener(Event.ENTER_FRAME, loop);		}		private function stopLoop(){			removeEventListener(Event.ENTER_FRAME, loop);		}	}}